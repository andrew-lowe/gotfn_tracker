{
  "name": "forbidden-north-tracker",
  "version": "1.0.0-beta.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "NODE_ENV=development PORT=5175 node --watch server/index.js",
    "test": "node --test server/tests/*.test.js",
    "build": "vite build",
    "preview": "vite preview",
    "build:standalone:win": "node scripts/build-standalone.mjs win",
    "build:standalone:mac": "node scripts/build-standalone.mjs mac",
    "build:standalone:linux": "node scripts/build-standalone.mjs linux"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@yao-pkg/pkg": "^6.0.0",
    "esbuild": "^0.24.0",
    "vite": "^6.0.0"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ],
    "outputPath": "release"
  }
}
